zend_extension=xdebug.so

xdebug.show_error_trace = 1
xdebug.remote_enable = 1
xdebug.idekey = {{ php_xdebug_idekey | default('PHPSTORM') }}
xdebug.remote_host = {{ php_xdebug_remote_host | default('10.0.2.2') }}
xdebug.remote_port = {{ php_xdebug_remote_port | default('9009') }}
