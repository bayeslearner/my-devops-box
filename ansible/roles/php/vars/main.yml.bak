---
system_pkgs: 
  - software-properties-common
  - librdkafka-dev
  - libpcre3-dev
  - libcurl3-openssl-dev
  - zlib1g 
  - zlib1g-dev
  - libgmp-dev
  - freetds-common 
  - freetds-bin 
  - freetds-dev
  - libssl-dev
  - net-tools 
  - resolvconf
  - htop
  - dirmngr 
  - apt-transport-https
  - git 
  - curl 
  - unzip
  - dos2unix

cassandra_urls:
  - https://rgdata.s3.nl-ams.scw.cloud/dev/libssl1.0.0_1.0.2l-1_bpo8_1_amd64.deb
  - https://downloads.datastax.com/cpp-driver/ubuntu/16.04/dependencies/libuv/v1.28.0/libuv1_1.28.0-1_amd64.deb
  - https://downloads.datastax.com/cpp-driver/ubuntu/16.04/dependencies/libuv/v1.28.0/libuv1-dev_1.28.0-1_amd64.deb
  - https://downloads.datastax.com/cpp-driver/ubuntu/16.04/cassandra/v2.12.0/cassandra-cpp-driver_2.12.0-1_amd64.deb
  - https://downloads.datastax.com/cpp-driver/ubuntu/16.04/cassandra/v2.12.0/cassandra-cpp-driver-dev_2.12.0-1_amd64.deb

# This list must be processed in this particular order to work correctly
cassandra_pkgs:
  - libuv1_1.28.0-1_amd64.deb
  - libuv1-dev_1.28.0-1_amd64.deb
  - cassandra-cpp-driver_2.12.0-1_amd64.deb
  - cassandra-cpp-driver-dev_2.12.0-1_amd64.deb

php_default_version_debian: "7.0"
php_enable_php_fpm: true
php_enable_webserver: false
php_webserver_daemon: "nginx"

php_display_errors: "On"
php_expose_php: "On"
php_memory_limit: "512M"
php_max_execution_time: "60"
php_max_input_time: "60"
php_max_input_vars: "1000"
php_realpath_cache_size: "32K"

php_file_uploads: "On"
php_max_file_uploads: "20"
php_post_max_size: "32M"
php_allow_url_fopen: "On"

php_date_timezone: "Europe/Paris"

php_packages:
  - php
  - php-dev
  - php-cli
  - php-fpm
  - php-common
  - php-gd
  - php-xml
  - php-zip
  - php-mbstring
  - php-pdo
  - php-apcu
  - php-opcache
  - php-json
  - php-curl
  - php-xdebug
  - php-sybase
  - php-oauth
  - php-mysql
  - php-pgsql
  - php-pear

php_pecl_install_pecl: false
php_pecl_install_command: "pecl install"
php_pecl_extensions:
  - rdkafka
  - cassandra
