user www-data;
worker_processes 4;
pid /var/run/nginx.pid;

events {
    worker_connections 4096;
    multi_accept on;
    use epoll;
}

http {

    # General settings
    sendfile on;
    server_tokens off;
    charset utf-8;
    default_type application/octet-stream;
    tcp_nopush on;
    tcp_nodelay on;
    send_timeout 300;
    keepalive_timeout 65;
    client_body_timeout 60;
    client_body_buffer_size 16K;
    client_header_timeout 60;
    client_header_buffer_size 1k;
    client_max_body_size 100m;
    types_hash_max_size 2048;

    # SSL settings
    ssl_session_tickets off;
    ssl_prefer_server_ciphers on;
    ssl_session_timeout 480m;
    ssl_session_cache shared:SSL:20m;
    ssl_ecdh_curve secp384r1; # from NISTâ€™s ECC curve recommendation
    ssl_dhparam {{ nginx_ssl_dhparam }}; # Generate with: openssl dhparam -out /etc/nginx/dhparam.pem 4096
    ssl_protocols {{ nginx_ssl_protocols }};
    ssl_ciphers {{ nginx_ssl_ciphers }};

    # HSTS (ngx_http_headers_module is required) (86400 seconds = 1 day)
    #add_header Strict-Transport-Security max-age=86400;

    # Log settings
    log_format combined_ssl '$remote_addr - $remote_user [$time_local] '
                             '$ssl_protocol/$ssl_cipher '
                            '"$request" $status $body_bytes_sent '
                            '"$http_referer" "$http_user_agent"';

    log_format timed_combined '$remote_addr - $remote_user [$time_local] '
                              '$ssl_protocol/$ssl_cipher '
                              '"$request" $status $body_bytes_sent '
                              '"$http_referer" "$http_user_agent" '
                              '$request_time $upstream_response_time $pipe';

    access_log {{ nginx_access_log_path }};
    error_log {{ nginx_error_log_path }};

    # Gzip
    gzip on;
    gzip_proxied any;
    gzip_disable "MSIE [1-6]\.";
    gzip_http_version 1.1;
    gzip_vary on;
    gzip_comp_level 6;
    gzip_buffers 16 8k;
    gzip_min_length 512;
    gzip_types 
        text/plain
        text/xml
        text/css
        image/svg+xml
        application/xhtml+xml
        application/xml
        application/rss+xml
        application/atom_xml
        application/x-javascript
        application/x-httpd-php
        application/x-httpd-fastphp
        application/x-httpd-eruby;
    gzip_disable "MSIE [1-6]\.(?!.*SV1)";

    # Includes
    include /etc/nginx/mime.types;
    include /etc/nginx/conf.d/*.conf;
    include /etc/nginx/sites-enabled/*;
}
