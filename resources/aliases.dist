alias ..="cd .."
alias ...="cd ../.."

alias h='cd ~'
alias c='clear'

alias gi='ansible-galaxy install -r roles/requirements.yml'
alias gif='ansible-galaxy install -r roles/requirements.yml --force'

function clear_facts()
{
    ansible all -m meta -a "clear_facts"
}

function playbook() {
    ansible-playbook "$@"
}
